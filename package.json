{
	"name": "opencode-copilot-messages",
	"version": "0.1.0",
	"description": "OpenCode plugin for Copilot Claude via Anthropic Messages API (/v1/messages)",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"files": [
		"dist/",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"build": "bun run clean:dist && tsc -p tsconfig.build.json",
		"clean:dist": "bun -e \"import { rm } from 'node:fs/promises'; await rm('dist', { recursive: true, force: true })\"",
		"typecheck": "tsc --noEmit",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "bun test",
		"prepublishOnly": "bun run build",
		"prepare": "husky"
	},
	"dependencies": {
		"@ai-sdk/anthropic": "^1.0.0",
		"@opencode-ai/plugin": "^1.1.48"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"typescript": "^5.0.0"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json}": [
			"biome check --write",
			"biome format --write"
		]
	}
}
