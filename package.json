{
	"name": "opencode-monorepo",
	"private": true,
	"packageManager": "bun@1.3.9",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"typecheck": "turbo run typecheck",
		"lint": "turbo run lint",
		"lint:fix": "turbo run lint:fix",
		"format": "turbo run format",
		"test": "turbo run test",
		"preflight": "bun run test && bun run typecheck && bun run lint",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.2",
		"@types/bun": "latest",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"prettier": "^3.8.1",
		"turbo": "^2.8.1",
		"typescript": "^5.0.0"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx,json}": [
			"biome check --write",
			"biome format --write"
		]
	}
}
